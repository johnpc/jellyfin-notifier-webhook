{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "outDir": "dist",
    "module": "commonjs",
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "incremental": true,
    "typeRoots": ["./node_modules/@types", "./src"],
    "types": ["node", "jest"],
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "amplify/**/*"],
  "exclude": ["node_modules", "build"]
}
